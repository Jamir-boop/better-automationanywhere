// feat lines in number row
.taskbot-canvas-list-node > .taskbot-canvas-list-node__number.taskbot-canvas-list-node__number--clickable
	&::after
		background: var(--taskbot_canvas_list_node_number_background)
		width: 300px
		content: ''
		display: block
		position: absolute
		left: 100%
		top: 50%
		transform: translateY(-50%)
		box-sizing: content-box
		line-height: normal

	&::before
		content: ''
		display: block
		width: 300px
		height: 2px
		background:#00000038
		position: absolute
		left: 100%
		top: 50%
		transform: translateY(-50%)
		box-sizing: content-box
		line-height: normal

// this works with userScript file
.taskbot-canvas-list-node__number.line-highlighted
	&::after
		background: #ffe600 !important
		width: 300px
		content: ''
		display: block
		position: absolute
		left: 100%
		top: 50%
		transform: translateY(-50%)
		box-sizing: content-box
		line-height: normal

	&::before
		content: ''
		display: block
		width: 300px
		height: 2px
		background: #00000080 !important
		position: absolute
		left: 100%
		top: 50%
		transform: translateY(-50%)
		box-sizing: content-box
		line-height: normal

	transition: width 2s ease